@{
    ViewData["Title"] = "Access Denied";
}

<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-md-8 col-lg-6 text-center">
            <div class="mb-4">
                <i class="fa-solid fa-lock text-warning" style="font-size: 4rem;"></i>
            </div>
            <h1 class="display-4 mb-3">Access Denied</h1>
            <p class="lead text-muted mb-4">
                You do not have permission to access this resource.
            </p>
            <div class="d-flex gap-2 justify-content-center">
                <a asp-controller="Home" asp-action="Index" class="btn btn-primary">Go to Home</a>
                <a asp-controller="Auth" asp-action="Login" class="btn btn-outline-secondary">Sign In</a>
            </div>
        </div>
    </div>
</div>

